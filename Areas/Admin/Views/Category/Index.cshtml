@model IEnumerable<App.Models.Category>

@{
    ViewData["Title"] = "Danh Mục";
}


<body>
    <p>
        <a style="font-size: 20px; padding-left: 10px; text-decoration: none;" asp-action="Create">
            <i class="fa-solid fa-gears"></i>
            Tạo chuyên mục mới
        </a>
    </p>

    <partial name="_StatusMessage" />
    <table class="table">
        <thead>
            <tr>
                <th style="width: 25%;">
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th style="width: 60%;">
                    @Html.DisplayNameFor(model => model.Content)
                </th>

                <th style="width: 15%;">
                    Sửa/Xóa
                </th>
            </tr>
        </thead>
        <tbody>

            @if (Model.Count() > 0)
                @await Component.InvokeAsync("RowTreeCategory", new { categories = Model, level = 0 })


        </tbody>
    </table>
    <hr>
</body>