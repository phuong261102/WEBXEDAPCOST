@model App.Models.Category

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
}
<style>
    dl.row {
        border: 2px solid #000;
    }

    dl.row dt {
        border-right: 2px solid #000;
        border-bottom: 2px solid #000;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    dl.row dd {
        margin-top: 25px;
        padding-bottom: 10px;
    }
</style>

<body>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                Mô tả
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Content)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Slug)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Slug)
            </dd>
            <dt style="border-bottom: none;" class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParentCategory)
            </dt>
            <dd class="col-sm-10">
                @if (Model.ParentCategory != null)
                {
                    @Html.DisplayFor(model => model.ParentCategory.Slug)
                }
                else
                {
                    <text>No Parent Category</text>
                }
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Sửa</a> |
        <a asp-action="Index">Quay lại danh sách</a>
    </div>
</body>
