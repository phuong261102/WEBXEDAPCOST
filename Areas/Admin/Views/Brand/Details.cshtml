@model App.Models.Brand

@{
    ViewData["Title"] = "Thông Tin Thương Hiệu";
}

<style>
    dl.row {
        border: 2px solid #000;
    }

    dl.row dt {
        border-right: 2px solid #000;
        border-bottom: 2px solid #000;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    dl.row dd {
        margin-top: 25px;
        padding-bottom: 10px;
    }
</style>

<body>
    <div>
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateUpdated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateUpdated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Slug)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Slug)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt style="border-bottom: none;" class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd style="border-bottom: none;" class="col-sm-10">
                <img style="width: 30%;" src="@Html.DisplayFor(model => model.Image)"
                    alt="@Html.DisplayFor(model => model.Name)" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>