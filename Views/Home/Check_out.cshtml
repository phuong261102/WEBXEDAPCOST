@{
    ViewData["Title"] = "Check Out Page";
}

<body>
    <div style="padding-bottom: 200px;" class="cart_shop">
        <div class="grid">
            <div class="is-large">
                <nav style="text-align: center; width: 100%;" class="woocommerce-breadcrumb breadcrumbs">
                    <a href="cart.html">SHOPPING CART</a>
                    <span style="font-weight: 100;" class="divider">></span>
                    <a style="color: black;" href="#">CHECKOUT DETAILS</a>
                    <span style="font-weight: 100;" class="divider">></span>
                    <a>ORDER COMPLETE</a>
                </nav>

            </div>
            <!--products-->
            <div class="product_cart_shops">
                <div class="cart_products_address">
                    <div class="orn"></div>
                    <!--products-giohang-->
                    <h4 style="margin-top: 20px;">ĐỊA CHỈ NHẬN HÀNG</h4>

                    <div class="text text-information">
                        <p>Họ Và Tên *</p>
                    </div>

                    <div class="text_box">
                        <input type="text" placeholder="Nhập Thông Tin Tại Đây">
                    </div>

                    <div class="text text-information">
                        <p>Tỉnh/Thành Phố *</p>
                    </div>

                    <div class="text_box">
                        <form action="" class="woocommerce-ordering" method="get">
                            <select name="orderby" id="orderby">
                                <option value="City#">N/A</option>
                                <option value="CityDN">Đà Nẵng</option>
                                <option value="CityHP">Hải Phòng</option>
                                <option value="CityHCM">Hồ Chí Minh</option>
                                <option value="CityHN">Hà Nội</option>
                                <option value="CityHT">Hà Tĩnh</option>
                            </select>
                        </form>
                    </div>

                    <div class="text text-information">
                        <p>Quận/Huyện *</p>
                    </div>

                    <div class="text_box">
                        <form action="" class="woocommerce-ordering" method="get">
                            <select name="orderby" id="orderby">
                                <option value="City#">N/A</option>
                                <option value="CityHD">Hải Đông</option>
                                <option value="CityPD">Phương Đông</option>
                                <option value="CityVT">Vũ Trường</option>
                            </select>
                        </form>
                    </div>

                    <div class="text text-information">
                        <p>Địa Chỉ *</p>
                    </div>

                    <div class="text_box">
                        <input type="text" placeholder="Nhập Thông Tin Tại Đây">
                    </div>

                    <div class="text text-information">
                        <p>Số Điện Thoại*</p>
                    </div>

                    <div class="text_box">
                        <input type="text" placeholder="Nhập Thông Tin Tại Đây">
                    </div>

                    <div class="text text-information">
                        <p>Địa Chỉ Email *</p>
                    </div>

                    <div class="text_box">
                        <input type="text" placeholder="Nhập Thông Tin Tại Đây">
                    </div>

                    <div class="text text-information">
                        <p>Ghi Chú Đơn Hàng</p>
                    </div>

                    <div class="text_box text_box_block">
                        <textarea placeholder="Nhập Thông Tin Tại Đây"></textarea>
                    </div>
                </div>


                <div class="cart_products_oder">
                    <div class="oder_address">
                        <h3 style="font-size: 13px; padding-bottom: 20px;">ĐƠN HÀNG CỦA BẠN</h3>
                        <table class="oder_product-col">
                            <tbody>
                                <tr class="checkcart col-oder">
                                    <th>SẢN PHẨM</th>
                                    <td style="font-weight: bolder;">TỔNG</td>
                                </tr>
                            </tbody>
                        </table>

                        <table class="oder_product-col address-col">
                            <tbody>
                                <tr class="checkcart col-oder">
                                    <th style="font-weight: 100;"></th>
                                    <td>N/A</td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="oder_product-col address-col">
                            <tbody>
                                <tr class="checkcart col-oder">
                                    <th>Tổng</th>
                                    <td>N/A</td>
                                </tr>
                            </tbody>
                        </table>
                        <table style="margin-bottom: 20px;" class="cart_product_buy total check">
                            <tbody>
                                <tr colspan="2">
                                    <th>
                                        Giao Hàng
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                        <table class="oder_product-col address-col">
                            <tbody>
                                <tr class="product_cart_buys check" colspan="2">
                                    <div class="radio-buttons">
                                        <label class="radio-container">Giao Hàng Xe Đạp Miễn Phí (toàn quốc)
                                            <input type="radio" name="check_GH" checked>
                                            <span class="radio-checkmark"></span>
                                        </label>
                                        <label class="radio-container">Giao Hàng Thần Tốc (1-3 ngày)
                                            <input type="radio" name="check_GH">
                                            <span class="radio-checkmark"></span>
                                        </label>
                                        <label class="radio-container">Tặng Kèm Phụ Kiện
                                            <input type="radio" name="check_GH">
                                            <span class="radio-checkmark"></span>
                                        </label>
                                    </div>
                                </tr>
                            </tbody>
                        </table>
                        <table class="oder_product-col address-col">
                            <tbody>
                                <tr class="checkcart col-oder">
                                    <th>Thành Tiền</th>
                                    <td>N/A</td>
                                </tr>
                            </tbody>
                        </table>

                        <table style="margin-bottom: 20px;" class="cart_product_buy total check">
                            <tbody>
                                <tr colspan="2">
                                    <th>
                                        Phương Thức Thanh Toán
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                        <table class="">
                            <tbody>
                                <tr class="product_cart_buys check" colspan="2">
                                    <div class="radio-buttons">
                                        <label class="radio-container">Thanh Toán Qua Ngân Hàng/VNPay
                                            <input type="radio" name="checkTT">
                                            <span class="radio-checkmark"></span>
                                        </label>
                                        <label class="radio-container">Thanh Toán Trực Tiếp
                                            <input type="radio" name="checkTT">
                                            <span class="radio-checkmark"></span>
                                        </label>
                                    </div>
                                </tr>
                            </tbody>
                        </table>

                        <table class="cart_product_buy total check">
                            <tbody>
                                <tr class="product_cart_buys check" colspan="2">
                                    <td class="title_product">
                                        <a style="text-decoration: none; color: #fff;">
                                            <h4>Đặt</h4>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>