@using Microsoft.AspNetCore.Identity
@using App.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm"
        class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item dropdown">
                <a class="nav-link text-white dropdown-toggle" href="#" id="manageDropdown" role="button"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Manage">
                    <i class="fa-solid fa-user text-white"></i>
                    @UserManager.GetUserName(User)
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="manageDropdown">
                    <a class="dropdown-item" asp-area="Identity" asp-controller="Manage" asp-action="Index">
                        <i class="fa-solid fa-info-circle"></i> Thông Tin Cá Nhân
                    </a>
                    <div class="dropdown-divider"></div>
                    <form asp-area="Identity" asp-controller="Account" asp-action="LogOff" method="post"
                        id="logoutFormDropdown">
                        <button type="submit" class="dropdown-item">
                            <i class="fa-solid fa-sign-out-alt"></i> Đăng Xuất
                        </button>
                    </form>
                </div>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" style="font-size: 18px;">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">
                <i class="fa-solid fa-user text-white"></i>
            </a>
        </li>
    </ul>
}