<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home</title>
    <link rel="stylesheet" href="~/css/cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/popup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product_sale.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bicyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart_check.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/content_address.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/content_main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/icon_cotant.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/content_dichvu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slide.css" asp-append-version="true" />
    <script src="https://cdn.tiny.cloud/1/d51bskdfs25amewl89wyimb34fzqqpq1xuyy6qcaosi9fwin/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>
    <link rel="stylesheet" href="~/css/sale.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/slide_bicycle_main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/layout/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/XEDAPVIP.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/e21f566ee8.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap&subset=vietnamese"
        rel="stylesheet">
    <script src="https://cdn.tiny.cloud/1/d51bskdfs25amewl89wyimb34fzqqpq1xuyy6qcaosi9fwin/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>
</head>

<body>
    <div class="contact-icons" id="contact-icons">
        <div>
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-house"></i>
            </a>
        </div>
        <hr>
        <div>
            <a style="text-align: center;" asp-area="Home" asp-controller="ProductView" asp-action="Cart">
                <i class="fa-solid fa-cart-shopping"></i>
            </a>
        </div>
        <hr>
        <div>
            <a asp-area="Identity" asp-controller="Manage" asp-action="Index" title="Manage">
                <i class="fa-solid fa-user"></i>
            </a>
        </div>
    </div>

    </div>
    <header>
        <div class="grid">
            <!-- Info bar -->
            <nav style="padding: 0;" class="navbar navbar-expand-sm navbar-toggleable-sm justify-content-center">
                <div class="menu_left row me-5 justify-content-center">
                    <a class="fs-7 text-decoration-none col-sm-auto" asp-area="" asp-controller="Home"
                        asp-action="Address_shop"><i class="fa-solid fa-location-dot text-primary me-1"></i> TÌM ĐỊA CHỈ
                        CỬA
                        HÀNG</a>
                    <a class="fs-7 text-decoration-none col-sm-auto" href="#"><i class="fa-solid fa-phone me-1"></i>
                        HOTLINE: 0352222222</a>
                    <a class="fs-7 text-decoration-none col-sm-auto" href="#"><i
                            class="fa-solid fa-location-dot text-primary"></i> CSKH: 1800 9555</a>
                </div>
                <div class="menu_right row ms-5 align-items">
                    <li class="menu_list_item col-sm-auto" style="background-color: #236f39"> Chất Lượng Quốc Tế</li>
                    <li class="menu_list_item col-sm-auto" style="background-color: #f61212"> Freeship Toàn Quốc</li>
                    <li class="menu_list_item col-sm-auto"> Giao Nhanh 48h</li>
                </div>
            </nav>
        </div>
        <!-- Menu bar -->
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-sticky bg-primary border-bottom box-shadow">
            <div class="grid">
                <div class="container-fluid d-flex align-items-center">
                    <a style="margin: 0; width: 20%;" class="navbar-brand" asp-area="" asp-controller="Home"
                        asp-action="Index">
                        <img src="/images/logo.png" alt="" class="img-fluid">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div style="width: 80%;" class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul style="width: 30%; font-size: 0.9rem;" class="navbar-nav">
                            <li class="nav-item category-product">
                                <a class="nav-link text-light" asp-area="Home" asp-controller="ProductView"
                                    asp-action="Product" asp-route-slug="">SẢN PHẨM</a>
                                <div class="categorypopup">
                                    @RenderSection("Popup", false)
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                    asp-action="Sale">KHUYẾN MÃI</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home"
                                    asp-action="Service">DỊCH VỤ</a>
                            </li>
                        </ul>
                        <div style="width: 40%;" class="header__search">
                            <form style="padding-top: 20px; position: relative;" method="get"
                                action="@Url.Action("Product", "ProductView", new { area = "Home" })">
                                <input style="padding: 3px 10px;" type="text" name="searchString"
                                    class="header__search__input" placeholder="Tìm Kiếm">
                                <button type="submit" class="header__search-btn">
                                    <i style="top: 30%;right:-3%;"
                                        class="header__search-icon fa-solid fa-magnifying-glass"></i>
                                </button>
                            </form>
                        </div>
                        <partial name="_LoginPartial" />
                        <partial name="_MenuManagePartial" />
                        <a asp-area="Home" asp-controller="ProductView" asp-action="Cart"
                            class="header-item header__item__cart">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div style="padding-bottom: 500px;" class="contain">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="grid">
                <div class="footer-inner">
                    <div class="footer-column">
                        <h3>THÔNG TIN HỖ TRỢ SHOP</h3>
                        <p>Zalo1 : 0911 966 944</p>
                        <p>Zalo2 : 0911 966 944</p>
                        <p>Zalo3 : 0911 966 944</p>
                        <p>Zalo4 : 0911 966 944</p>
                    </div>
                    <div class="footer-column">
                        <h3>CHÍNH SÁCH</h3>
                        <ul>
                            <li><a href="#">Hướng Dẫn Trả Góp</a></li>
                            <li><a href="#">Chế Độ Bảo Hành</a></li>
                            <li><a href="#">Chính Sách BÁn Hàng</a></li>
                            <li><a href="#">Khuyến Mãi</a></li>
                            <li><a href="#">Chính Sách Bảo Mật Thông Tin</a></li>
                            <li><a href="#">Chính Sách Giải Quyết Khiêú Nại</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h3>CÔNG TY</h3>
                        <ul>
                            <li><a href="#">Giới thiệu</a></li>
                            <li><a href="#">Hệ thống cửa hàng</a></li>
                            <li><a href="#">Liên Hệ</a></li>
                            <li><a href="#">Tuyển dụng</a></li>
                        </ul>
                    </div>
                    <div class="footer-column">
                        <h3>KẾT NỐI</h3>
                        <a href="" class="footer-item header__item__user">
                            <i class="fa-brands fa-facebook"></i>
                        </a>
                        <a href="" class="footer-item header__item__user">
                            <i class="fa-brands fa-youtube"></i>
                        </a>
                        <h3 style="margin-top: 25px;">Hỗ Trợ Thanh Toán Ví Điện Tử</h3>
                        <img style="width: 300px;" src="../assets/img/thanh-toan-new-01-1.png" alt="">
                    </div>
                </div>
                <div class="footer-bottom">
                    <p style="color: #fff;">&copy; 2025 Tất cả các quyền được bảo lưu.</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="~/js/kc.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".category-product").hover(
                function () {
                    $(this).find('.categorypopup').show();
                },
                function () {
                    $(this).find('.categorypopup').hide();
                }
            );
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
